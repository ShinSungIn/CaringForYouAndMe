<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".PreventionActivity">

	<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

		<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/text_margin"
				android:layout_marginLeft="@dimen/text_margin"
				android:layout_marginRight="@dimen/text_margin"
				android:textColor="@color/colorText_Black"
				android:textSize="@dimen/textView_fontsize"
				android:lineSpacingExtra="@dimen/textView_lineheight"
				android:layout_gravity="center"
				android:text="치매위험인자 연구결과"/>

		<android.support.v7.widget.AppCompatImageButton
				android:text="새창"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/prevention1_view"
				android:src="@drawable/prevention1_view"
				android:adjustViewBounds="true"
				android:scaleType="fitCenter"
				android:background="@color/colorWhite"
				android:layout_margin="@dimen/text_margin"
		/>

		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/text_margin"
				android:layout_marginRight="@dimen/text_margin"
				android:textColor="@color/colorText_Gray"
				android:textSize="@dimen/textView_fontsize"
				android:layout_gravity="center"
				android:text="(사진 클릭시 확대)"/>

		<!--TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/text_margin"
				android:text="@string/large_text"/-->

		<!--TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_margin="@dimen/text_margin"
				android:text="@string/large_text"
				android:drawableTop="@drawable/prevention1_view"
				android:drawableBottom="@drawable/prevention1_view"
				android:drawablePadding="5dip"/-->

	</LinearLayout>

</android.support.v4.widget.NestedScrollView>