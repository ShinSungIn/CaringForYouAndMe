<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".DictionaryActivity">

	<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				android:weightSum="4"
				android:gravity="right"
				android:layout_marginTop="@dimen/_8dp">
			<Button
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:id="@+id/dic_mp_play"
					android:text="재생 꾹~"
					android:layout_marginRight="4dp"
					android:layout_gravity="left"
					android:background="@drawable/button_radius5"
			/>
			<Button
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:id="@+id/dic_mp_stop"
					android:text="일시정지"
					android:layout_marginRight="4dp"
					android:layout_gravity="center_horizontal"
					android:background="@drawable/button_radius5"
			/>
			<Button
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:id="@+id/dic_mp_pause"
					android:text="정지"
					android:layout_marginRight="@dimen/text_margin"
					android:layout_gravity="right"
					android:background="@drawable/button_radius5"
			/>
		</LinearLayout>

		<android.support.v7.widget.AppCompatImageButton
				android:text="새창"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/dictionary_main1_sub0_view"
				android:src="@drawable/dictionary_main1_sub0"
				android:adjustViewBounds="true"
				android:scaleType="fitCenter"
				android:background="@color/colorWhite"
				android:layout_marginTop="@dimen/text_margin"
				android:layout_marginLeft="@dimen/text_margin"
				android:layout_marginRight="@dimen/text_margin"
				android:layout_gravity="center"
		/>

	</LinearLayout>

</android.support.v4.widget.NestedScrollView>