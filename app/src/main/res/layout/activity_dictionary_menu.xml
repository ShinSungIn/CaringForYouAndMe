<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
											 xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
											 android:layout_width="match_parent" android:layout_height="match_parent"
											 app:layout_behavior="@string/appbar_scrolling_view_behavior"
											 tools:showIn="@layout/app_bar_main"
											 tools:context=".DictionaryMenuActivity"
>

	<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			android:theme="@style/AppTheme.AppBarOverlay"
			android:popupTheme="@style/ThemeOverlay.AppCompat.Light">

	</android.support.v7.widget.Toolbar>

	<LinearLayout android:orientation="vertical"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:id="@+id/linearLayout1"
				  app:layout_constraintTop_toBottomOf="@+id/toolbar"
				  android:weightSum="12"
	>

		<ImageView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:id="@+id/imageView"
				android:layout_marginBottom="24dp"
				app:layout_constraintHorizontal_bias="0.0"
				android:background="@drawable/sub_img"
				android:layout_weight="4"
		/>


		<Button android:text=""
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_marginLeft="@dimen/_8dp"
				android:layout_marginRight="@dimen/_8dp"
				android:layout_marginBottom="@dimen/_8dp"
				android:id="@+id/DicMenuButton1"
				android:layout_weight="1"
				android:background="@drawable/submenu7_btn01"/>
		<Button android:text=""
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_marginLeft="@dimen/_8dp"
				android:layout_marginRight="@dimen/_8dp"
				android:layout_marginBottom="@dimen/_8dp"
				android:id="@+id/DicMenuButton2"
				android:layout_weight="1"
				android:background="@drawable/submenu7_btn02"/>
		<Button android:text=""
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_marginLeft="@dimen/_8dp"
				android:layout_marginRight="@dimen/_8dp"
				android:layout_marginBottom="@dimen/_8dp"
				android:id="@+id/DicMenuButton3"
				android:layout_weight="1"
				android:background="@drawable/submenu7_btn03"/>
		<Button android:text=""
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_marginLeft="@dimen/_8dp"
				android:layout_marginRight="@dimen/_8dp"
				android:layout_marginBottom="@dimen/_8dp"
				android:id="@+id/DicMenuButton4"
				android:layout_weight="1"
				android:background="@drawable/submenu7_btn04"/>
	</LinearLayout>

</android.support.constraint.ConstraintLayout>
