<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		tools:showIn="@layout/app_bar_main"
		tools:context=".activity.MainActivity"
		>

	<LinearLayout android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/linearLayout2"
			android:weightSum="6"
	>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="2"
		>
			<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/imageView"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintHorizontal_bias="0.0"
					android:background="@drawable/main_img"
			/>
		</LinearLayout>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:layout_marginTop="@dimen/_8dp"
				android:layout_marginStart="@dimen/_8dp"
				android:layout_marginEnd="@dimen/_8dp"
				android:layout_gravity="center_horizontal"
		>
			<Button android:text=""
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:id="@+id/KnownButton1"
					android:background="@drawable/menu_01"
					android:layout_weight="1"
					android:layout_marginRight="4dp"
			/>
			<Button android:text=""
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:id="@+id/CureProgramButton5"
					android:background="@drawable/menu_02"
					android:layout_weight="1"
					android:layout_marginLeft="4dp"
			/>
		</LinearLayout>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:layout_marginTop="@dimen/_8dp"
				android:layout_marginStart="@dimen/_8dp"
				android:layout_marginEnd="@dimen/_8dp"
		>
			<Button android:text=""
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:id="@+id/PreventionButton2"
					android:background="@drawable/menu_03"
					android:layout_weight="1"
					android:layout_marginRight="4dp"
			/>
			<Button android:text=""
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:id="@+id/DictionaryButton7"
					android:background="@drawable/menu_06"
					android:layout_weight="1"
					android:layout_marginLeft="4dp"
			/>
		</LinearLayout>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:layout_marginTop="@dimen/_8dp"
				android:layout_marginStart="@dimen/_8dp"
				android:layout_marginEnd="@dimen/_8dp"
		>
			<Button android:text=""
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:id="@+id/RoadmapButton3"
					android:background="@drawable/menu_05"
					android:layout_weight="1"
					android:layout_marginRight="4dp"
			/>
			<Button android:text=""
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:id="@+id/DiaryButton6"
					android:background="@drawable/menu_04"
					android:layout_weight="1"
					android:layout_marginLeft="4dp"
			/>
		</LinearLayout>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:layout_marginTop="@dimen/_8dp"
				android:layout_marginStart="@dimen/_8dp"
				android:layout_marginEnd="@dimen/_8dp"
				android:layout_marginBottom="@dimen/_8dp"
		>
			<Button android:text=""
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:id="@+id/SupportButton4"
					android:background="@drawable/menu_07"
					android:layout_weight="1"
					android:layout_marginRight="4dp"
			/>
			<Button android:text=""
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:id="@+id/FeelingsButton8"
					android:background="@drawable/menu_08"
					android:layout_weight="1"
					android:layout_marginLeft="4dp"
			/>
		</LinearLayout>

	</LinearLayout>

</android.support.constraint.ConstraintLayout>